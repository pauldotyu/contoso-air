<section class="book-simple">
    <div class="container">
        <header class="book-simple-header">
            <a class="hero-back" href="/book">â† Change your search</a>
            <h1>Available flights</h1>
            <p>Pick your outbound and return flights below.</p>
        </header>
        <form action="/book/flights" method="POST" class="book-modern">
            <h2 class="block-flights-title2">Select departing flight</h2>
            <div class="bm-row" style="grid-template-columns: 1fr;">
                <div>
                    <h3 class="block-flights-title3">{{departure.name}} to {{returning.name}}</h3>
                    {{> flights/slider departure/days}}
                </div>
            </div>
            <div class="bm-row" style="grid-template-columns: 260px 1fr; margin-top: 8px;">
                <div>{{> flights/filters }}</div>
                <div>{{> flights/results-picker departure/flights}}</div>
            </div>

            <h2 class="block-flights-title2">Select return flight</h2>
            <div class="bm-row" style="grid-template-columns: 1fr;">
                <div>
                    <h3 class="block-flights-title3">{{returning.name}} to {{departure.name}}</h3>
                    {{> flights/slider returning/days}}
                </div>
            </div>
            <div class="bm-row" style="grid-template-columns: 260px 1fr; margin-top: 8px;">
                <div class="visible-sm-up">{{> flights/filters }}</div>
                <div>{{> flights/results-picker returning/flights}}</div>
            </div>

            <div class="bm-actions" style="margin-top: 8px;">
                <input type="hidden" name="fromCode" value="{{query/fromCode}}">
                <input type="hidden" name="toCode" value="{{query/toCode}}">
                <input type="hidden" name="dpa" value="{{query/dpa}}">
                <input type="hidden" name="dpb" value="{{query/dpb}}">
                <input type="hidden" name="passengers" value="{{query/passengers}}">
                <input class="bm-submit" type="submit" value="Next">
            </div>
        </form>
    </div>
</section>